doctype html
html(lang="en")
	head
		title #{name.family}, #{name.given} &mdash; Resume
		link(rel='stylesheet', href='/styles/main.css', media='screen')
		link(rel='stylesheet', href='/styles/print.css', media='print')
	body
		#page-wrap
			block header
			section#main
				for section, i in sections
					if i < sections.length - 1
						hr
					- var id = section.name.toLowerCase().replace(/\s/g, '-')
					div(id=id)
						case section.display
							when "text"
								= section.content
							when "table"
								+dispTable(section)
							when "timeline"
								+dispTimeline(section)